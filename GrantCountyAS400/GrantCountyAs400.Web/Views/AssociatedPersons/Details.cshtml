@model AssociatedPersonViewModel
@using GrantCountyAs400.Web.ViewModels.Assessment.AssociatedPerson



@{
    ViewData["Title"] = "Associated Person - Details";
    var filterViewModel = ViewBag.FilterViewModel as AssociatedPersonFilterViewModel;
}
<h2>Details</h2>


<div class="entity-details">
    <div class="entity-info clearfix">
        <div class="col-xs-6">
            <table class="table col-xs-6">
                <tbody>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.ParcelNumber) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.ParcelNumber) </span></td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.TaxPayer) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.TaxPayer) </span></td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Description) </strong></td>
                        <td class="text-right">
                            <span> @Html.DisplayFor(model => model.Description) </span>
                            <br />
                            <span> @Html.DisplayFor(model => model.SecondDescription) </span>
                            <br />
                            <span> @Html.DisplayFor(model => model.ThirdDescription) </span>
                            <br />
                            <span> @Html.DisplayFor(model => model.FourthDescrition) </span>
                            <br />
                            <span> @Html.DisplayFor(model => model.FifthDescription) </span>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.LineDate) </strong></td>
                        <td class="text-right">
                            <span> @Html.DisplayFor(model => model.LineDate) </span>
                        </td>
                        <td><strong>@Html.DisplayNameFor(model => model.AffidavitNumber) </strong></td>
                        <td class="text-right">
                            <span> @Html.DisplayFor(model => model.AffidavitNumber) </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-6">
            <table class="table col-xs-6">
                <tbody>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Owner) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.Owner) </span></td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.LandUse) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.LandUse) </span></td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.ZoneCodeDescr) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.ZoneCodeDescr) </span></td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.TaxCodeDesc) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.TaxCodeDesc) </span></td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.FirePatrolAcres) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.FirePatrolAcres) </span></td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.TotalAcres) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.TotalAcres) </span></td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.FMImprovedLandValue) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.FMImprovedLandValue) </span></td>
                        <td><strong>@Html.DisplayNameFor(model => model.BuildingValue) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.BuildingValue) </span></td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.AffidavitTaxYear) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.AffidavitTaxYear) </span></td>
                        <td><strong>@Html.DisplayNameFor(model => model.BuildingValue) </strong></td>
                        <td class="text-right"><span> @Html.DisplayFor(model => model.BuildingValue) </span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LineValues[0].AsmtrealPropertyAssociatedPersonsNameCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LineValues[0].AsmtmasterNameAddressNameCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LineValues[0].Comment)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LineValues)
        {
            <tr>

                <td>
                    <a asp-action="ItemDetail" asp-controller="AssociatedPersons" asp-route-nameCode="@item.AsmtmasterNameAddressNameCode" asp-route-parcelNumber="@Model.ParcelNumber" asp-area="">
                        @Html.DisplayFor(modelItem => item.AsmtrealPropertyAssociatedPersonsNameCode)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AsmtmasterNameAddressNameCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>

            </tr>
        }
    </tbody>
</table>

