                            <td class="text-right"><span> @Html.DisplayFor(model => model.TaxCodeDisplay) </span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row clearfix">
                <table class="table table-bordered table-striped col-xs-12">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                City
                            </th>
                            <th>
                                Type
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(_ => firstAffadavitParcel.PreviousOwnerSeller)
                            </td>
                            <td>
                                @Html.DisplayFor(_ => firstAffadavitParcel.AddressLine1)
                            </td>
                            <td>
                                @Html.DisplayFor(_ => firstAffadavitParcel.City)
                            </td>
                            <td>
                                Grantor
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayFor(_ => firstAffadavitParcel.NewOwnerBuyer)
                            </td>
                            <td>
                                @Html.DisplayFor(_ => firstAffadavitParcel.AddressLine1)
                            </td>
                            <td>
                                @Html.DisplayFor(_ => firstAffadavitParcel.City)
                            </td>
                            <td>
                                Grantee
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="col-xs-6">
                    <table class="table">
                        <tbody>
