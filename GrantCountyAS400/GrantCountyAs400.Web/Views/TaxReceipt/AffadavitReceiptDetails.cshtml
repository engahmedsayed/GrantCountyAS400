                            </tr>
                            <tr>
                                <td><strong>@Html.DisplayNameFor(_ => firstAffadavitParcel.LocalTaxPaid) </strong></td>
                                <td class="text-right"><span> @Html.DisplayFor(_ => firstAffadavitParcel.LocalTaxPaid) </span></td>
                            </tr>
                            <tr>
