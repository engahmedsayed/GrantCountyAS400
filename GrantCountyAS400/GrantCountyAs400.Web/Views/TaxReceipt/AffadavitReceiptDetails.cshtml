                                <td class="text-right"><span> @Html.DisplayFor(_ => firstAffadavitParcel.ExemptRegNumber) </span></td>
                            </tr>
                            <tr>
                                <td><strong>@Html.DisplayNameFor(_ => firstAffadavitParcel.MobileHomeNotation) </strong></td>
                                <td class="text-right"><span> @Html.DisplayFor(_ => firstAffadavitParcel.MobileHomeNotation) </span></td>
                            </tr>
                            <tr>
                                <td><strong>@Html.DisplayNameFor(_ => firstAffadavitParcel.DescriptionDisplay) </strong></td>
                                <td class="text-right"><span> @Html.DisplayFor(_ => firstAffadavitParcel.DescriptionDisplay) </span></td>
