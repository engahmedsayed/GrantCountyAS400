@model IEnumerable<TaxReceiptViewModel>
@using  GrantCountyAs400.Web.ViewModels.TreasurerVM.TaxReceipt

@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Receipts - Index";
    var filterViewModel = ViewBag.FilterViewModel as TaxReceiptFilterViewModel;
}

<h2>Receipts</h2>

<p>
    @using (Html.BeginForm("Index", "TaxReceipt", FormMethod.Get))
    {
        <div class="form-horizontal">
            <hr />
            <div class="row">
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="@filterViewModel.MinReceiptNumber" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input type="number" asp-for="@filterViewModel.MinReceiptNumber" name="minreceiptnumber" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@filterViewModel.MaxReceiptNumber" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input type="number" asp-for="@filterViewModel.MaxReceiptNumber" name="maxreceiptnumber" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="@filterViewModel.MinAffidavitNumber" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input type="number" asp-for="@filterViewModel.MinAffidavitNumber" name="minaffidavitnumber" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@filterViewModel.MaxAffidavitNumber" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input type="number" asp-for="@filterViewModel.MaxAffidavitNumber" name="maxaffidavitnumber" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="@filterViewModel.MinDate" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => filterViewModel.MinDate, null, "mindate", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="@filterViewModel.MaxDate" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => filterViewModel.MaxDate, null, "maxdate", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="form-group pull-right">
                        <input type="submit" value="Filter" class="btn btn-success" />
                        <input type="reset" value="Clear" class="btn btn-default" id="btnReset" />
                    </div>
                </div>
            </div>
        </div>
    }
</p>

<nav aria-label="navigation">
    @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("Index", new {
    pageNumber = pageNumber,
    minreceiptnumber = filterViewModel.MinReceiptNumber,
    maxreceiptnumber = filterViewModel.MaxReceiptNumber,
    minaffidavitnumber = filterViewModel.MinAffidavitNumber,
    maxaffidavitnumber = filterViewModel.MaxAffidavitNumber,
    mindate = filterViewModel.MinDate,
    maxdate = filterViewModel.MaxDate,
}))
</nav>
<table class="table">
    <thead>
        <tr>
            <th class="col-xs-2 col-md-1">
                @Html.DisplayNameFor(model => model.ReceiptNumber)
            </th>
            <th class="col-xs-2 col-md-1">
                @Html.DisplayNameFor(model => model.ReceiptDate)
            </th>
            <th class="col-xs-2 col-md-1">
                @Html.DisplayNameFor(model => model.AffidavitNumber)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-transactionNumber="@item.ReceiptNumber">
                        @Html.DisplayFor(_ => item.ReceiptNumber)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(_ => item.ReceiptDate)
                </td>
                <td>
                    @Html.DisplayFor(_ => item.AffidavitNumber)
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="navigation">
    @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("Index", new {
    pageNumber = pageNumber,
    minreceiptnumber = filterViewModel.MinReceiptNumber,
    maxreceiptnumber = filterViewModel.MaxReceiptNumber,
    minaffidavitnumber = filterViewModel.MinAffidavitNumber,
    maxaffidavitnumber = filterViewModel.MaxAffidavitNumber,
    mindate = filterViewModel.MinDate,
    maxdate = filterViewModel.MaxDate,
}))
</nav>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('.date-datepicker').datetimepicker({
                format: 'MM/DD/YYYY',
                showTodayButton: true,
                ignoreReadonly: true,
                showClear: true,
                useCurrent: false,
            });

        });
    </script>
}