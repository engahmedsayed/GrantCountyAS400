@model IEnumerable<GrantCountyAs400.Web.ViewModels.GeneralLedgerVM.GeneralLedgerMonthDetailsViewModel>
@using X.PagedList.Mvc.Core;
@using GrantCountyAs400.Web.ViewModels.GeneralLedgerVM
@using X.PagedList;

@{
    ViewData["Title"] = "Month Details";
}

<h2>Month Details</h2>
---------------





<nav aria-label="navigation">
    @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("MonthDetails", new {
    pageNumber = pageNumber,
    fiscalYear = ViewBag.FiscalYear,
    month = ViewBag.Month,
    fund = ViewBag.Fund,
    department = ViewBag.Department,
    program = ViewBag.Program,
    project = ViewBag.Project
}))
</nav>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().JENumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Line)
            </th>
            <th>
                @Html.DisplayName("Period")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().TransactionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Notation1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Kind)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JENumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line)
            </td>
            <td>
                @{ var formattedDate = item.Month + "/" + item.Year;}
                @Html.DisplayFor(modelItem => formattedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notation1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kind)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
        </tr>
        }
    </tbody>
</table>
<nav aria-label="navigation">
    @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("MonthDetails", new {
       pageNumber = pageNumber,
       fiscalYear = ViewBag.FiscalYear,
       month = ViewBag.Month,
       fund = ViewBag.Fund,
       department = ViewBag.Department,
       program = ViewBag.Program,
       project = ViewBag.Project
   }))
</nav>
<style>
    tr.row-details td, tr.row-details th {
        padding-top: 0 !important;
        padding-bottom: 0 !important;
    }

    tr.row-details td {
        border: none !important;
    }

    a.toggle-row-details {
        display: inline-block;
    }

        a.toggle-row-details[aria-expanded=true] .glyphicon-chevron-right {
            display: none;
        }

        a.toggle-row-details[aria-expanded=false] .glyphicon-chevron-down {
            display: none;
        }
</style>


