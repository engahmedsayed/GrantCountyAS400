@model IEnumerable<ExciseTaxRateViewModel>
@using  GrantCountyAs400.Web.ViewModels.TreasurerVM.ExciseTaxRate

@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Excise Tax Rates";
    var filterViewModel = ViewBag.FilterViewModel as ExciseTaxRateFilterViewModel;
}

<h2>Excise Tax Rates</h2>

<p>
    @using (Html.BeginForm("Index", "ExciseTaxRate", FormMethod.Get))
    {
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <label asp-for="@filterViewModel.Description" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-items="ViewBag.TaxRateDescriptions" asp-for="@filterViewModel.Description" class="form-control" name="description">
                        <option value="">--Please Select--</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@filterViewModel.RecordType" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <select asp-items="ViewBag.RecordTypes" asp-for="@filterViewModel.RecordType" class="form-control" name="recordtype">
                        <option value="">--Please Select--</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="form-group pull-right">
                        <input type="submit" value="Filter" class="btn btn-success" />
                        <input type="reset" value="Clear" class="btn btn-default" id="btnReset" />
                    </div>
                </div>
            </div>
        </div>
    }
</p>

<nav aria-label="navigation">
    @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("Index", new {
    pageNumber = pageNumber,
    description = filterViewModel.Description,
    recordtype = filterViewModel.RecordType,
}))
</nav>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RecordTypeStateLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EffectiveCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaxRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PenaltyRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PenaltyRate2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PenaltyRate3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterestRate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RecordTypeStateLocal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EffectiveCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PenaltyRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PenaltyRate2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PenaltyRate3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InterestRate)
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="navigation">
    @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("Index", new {
    pageNumber = pageNumber,
    description = filterViewModel.Description,
    recordtype = filterViewModel.RecordType,
}))
</nav>