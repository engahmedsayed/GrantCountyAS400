

@model GrantCountyAs400.Web.ViewModels.BuildingVM.MechanicalFeesDetailsViewModel
@{
    ViewData["Title"] = "Mechanical Fees";
}

<h2>Mechanical Fees</h2>

<div>
    <div class="entity-details row">
        <div class="entity-info clearfix">
            <partial name="_Header" for="@Model.BasicInfo" />
            <div class="col-xs-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <td><strong>Total Mechanical Fees </strong></td>
                            <td class="text-right"><span> @Html.DisplayFor(model => model.MechanicalExtendedAmount) </span></td>
                        </tr>
                        <tr>
                            <td><strong>Inspect/Pln-Rvw </strong></td>
                            <td class="text-right"><span> @Html.DisplayFor(model => model.PlrvwExtendedAmount) </span></td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="col-xs-6">
                <table class="table">
                    <thead>
                        <tr>
                            <td>
                                <strong>Fee Code</strong>
                            </td>
                            <td>Fee Description</td>
                            <td>Units/Hrs</td>
                            <td>Unit Fee</td>
                            <td>Extended Amt</td>
                            <td>Fee Category</td>
                        </tr>

                        @for (int i = 0; i < Model.CoutOfLargestList; i++)
                        {
                            <tr>
                                <td class="text-right">
                                    @if (i < Model.SequenceNumber.Count)
                                    {
                                        int? sequenceNumberDisplay = Model.SequenceNumber[i].HasValue ? (int?)Model.SequenceNumber[i] : null;
                                        @Html.DisplayFor(t => sequenceNumberDisplay)
                                    }
                                </td>
                                <td>
                                    @if(i < Model.FeeDescription.Count)
                                    {
                                        @Html.DisplayFor(t => t.FeeDescription[i])
                                    }
                                </td>
                                <td>
                                    @if(i < Model.NumberOfUnits.Count)
                                    {
                                        @Html.DisplayFor(t => t.NumberOfUnits[i])
                                    }
                                </td>
                                <td>
                                    @if(i < Model.UnitCharge.Count)
                                    {
                                        @Html.DisplayFor(t => t.UnitCharge[i])
                                    }
                                </td>
                                <td>
                                    @if(i < Model.ExtendedAmount.Count)
                                    {
                                        @Html.DisplayFor(t => t.ExtendedAmount[i])
                                    }
                                </td>
                                <td>
                                    @if(i < Model.FeeCategory.Count)
                                    {
                                        @Html.DisplayFor(t => t.FeeCategory[i])
                                    }
                                </td>
                            </tr>
                        }

                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
