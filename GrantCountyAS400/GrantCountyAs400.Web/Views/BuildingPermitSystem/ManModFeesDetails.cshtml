@model GrantCountyAs400.Web.ViewModels.BuildingVM.ManModFeesDetailsViewModel
@{
    ViewData["Title"] = "Structure Fees";
}

<h2>Structure Fees</h2>

<div>
    <div class="entity-details row">
        <div class="entity-info clearfix">
            <partial name="_Header" for="@Model.BasicInfo" />
            <div class="col-xs-6">
                <table class="table">
                    <tbody>

                        <tr>
                            <td><strong>@Html.DisplayNameFor(model => model.TotalValue) </strong></td>
                            <td class="text-right"><span> @Html.DisplayFor(model => model.TotalValue) </span></td>
                        </tr>
                        <tr>
                            <td><strong>@Html.DisplayNameFor(model => model.TotalBuildingFees) </strong></td>
                            <td class="text-right"><span> @Html.DisplayFor(model => model.TotalBuildingFees) </span></td>
                        </tr>
                        <tr>
                            <td><strong>@Html.DisplayNameFor(model => model.InspectPlanReview) </strong></td>
                            <td class="text-right"><span> @Html.DisplayFor(model => model.InspectPlanReview) </span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-xs-6">
                <table class="table">
                    <thead>
                        <tr>
                            <td>
                                Fee Code
                            </td>
                            <td>
                                Fee Description
                            </td>
                            <td>
                                Value/Hrs
                            </td>
                            <td>
                                Base Fee
                            </td>
                            <td>
                                Incr Fee
                            </td>
                            <td>
                                Extended Less
                            </td>
                            <td>
                                Amount Disc %
                            </td>
                            <td>
                                Fee Category
                            </td>
                        </tr>
                    </thead>

                    @for (int i = 0; i < Model.CoutOfLargestList; i++)
                    {
                        <tr>
                            <td class="text-left">
                                @if(i < Model.SequenceNumber.Count)
                                {
                                    int? sequenceNumberDisplay = Model.SequenceNumber[i].HasValue ? (int?)Model.SequenceNumber[i] : null;
                                    @Html.DisplayFor(t => sequenceNumberDisplay)
                                }
                            </td>
                            <td class="text-left">
                                @if(i < Model.FeeDescription.Count)
                                {
                                    @Html.DisplayFor(t => t.FeeDescription[i])
                                }
                            </td>
                            <td class="text-left">
                                @if(i < Model.NumberOfUnits.Count)
                                {
                                    @Html.DisplayFor(t => t.NumberOfUnits[i])
                                }
                            </td>
                            <td class="text-left">
                                @if(i < Model.BaseFee.Count)
                                {
                                    @Html.DisplayFor(t => t.BaseFee[i])
                                }
                            </td>
                            <td class="text-left">
                                @if(i < Model.FeeIncrement.Count)
                                {
                                    @Html.DisplayFor(t => t.FeeIncrement[i])
                                }
                            </td>
                            <td class="text-left">
                                @if(i < Model.ExtendedAmount.Count)
                                {
                                    @Html.DisplayFor(t => t.ExtendedAmount[i])
                                }
                            </td>
                            <td class="text-left">
                                @if(i < Model.MinMaxFlag.Count)
                                {
                                    @Html.DisplayFor(t => t.MinMaxFlag[i])
                                }
                            </td>
                            <td class="text-left">
                                @if(i < Model.FeeCode.Count)
                                {
                                    @Html.DisplayFor(t => t.FeeCode)
                                }
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
