@model IEnumerable<ManufacturedHomeParkViewModel>
@using GrantCountyAs400.Web.ViewModels.Assessment.HomePark
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Manufactured Home Parks - Index";
    var filterViewModel = ViewBag.FilterViewModel as ManufacturedHomeParkFilterViewModel;
}

<h2>Manufactured Home Parks</h2>

<p>
    @using (Html.BeginForm("Index", "ManufacturedHomePark", FormMethod.Get))
    {
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <label asp-for="@filterViewModel.MhparkCode" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="@filterViewModel.MhparkCode" name="mhparkcode" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@filterViewModel.Name" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="@filterViewModel.Name" name="name" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@filterViewModel.ContactName" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="@filterViewModel.ContactName" name="contactname" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="form-group pull-right">
                        <input type="submit" value="Filter" class="btn btn-success" />
                        <input type="button" value="Clear" class="btn btn-default" id="btnReset" />
                    </div>
                </div>
            </div>
        </div>
    }
</p>

<nav aria-label="navigation">
    @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("Index", new {
    pageNumber = pageNumber,
    mhparkcode = filterViewModel.MhparkCode,
    name = filterViewModel.Name,
    contactname = filterViewModel.ContactName
}))
</nav>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MhparkCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNameCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelephoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParcelNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.MhparkCode)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddressLine2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNameCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelephoneNumberDisplay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParcelNumber)
                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="navigation">
    @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("Index", new {
    pageNumber = pageNumber,
    mhparkcode = filterViewModel.MhparkCode,
    name = filterViewModel.Name,
    contactname = filterViewModel.ContactName
}))
</nav>